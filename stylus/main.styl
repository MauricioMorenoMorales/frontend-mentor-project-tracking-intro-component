@import './_tokens.styl'
html
	box-sizing border-box
	font-family FontFamilyBody
	font-size 62.5%
	scroll-behavior smooth

*,*:before, *:after
	box-sizing inherit

body
	margin 0
	overflow-x hidden
	font-size 1.8rem

figure
	margin 0

img
	max-width 100%
	height auto

.header
	position relative
	z-index 100
	display flex
	justify-content space-between
	padding 0 7%
	align-items center
	height 100px
	&__figure
		width 25px
	&__menu
		&--desktop
			display none
		&--mobile
			display none
			background-color white
			&__link
				color VeryDarkBlue
				text-decoration none
				font-family FontFamilyHeadings
				font-weight FontWeightHeadingBold
				font-size 2.5rem
				text-transform uppercase
				width 100%
				text-align center
				margin 10px 0
				&:nth-last-child(1)
					color DarkGrayishBlue
					padding-top 30px
					margin-top 30px
					border-top 1px solid lighten(DarkGrayishBlue, 40)
			&.is-active
				position absolute
				width 300px
				padding 20px
				top 100px
				right 0
				left 0
				margin-left auto
				margin-right auto
				display flex
				flex-direction column
				box-shadow BoxShadow
				border-radius 5px


.main
	&__figure
		position relative
		&__image
			position relative
			z-index 10
			margin-left 80px
		&__background
			z-index 0
			background-color lighten(DarkGrayishBlue, 50)
			position absolute
			width 50%
			height 300px
			top -100px
			right 0
			border-radius 0 0 0 100px

@media screen and (min-width 800px)
	.header
		&__menu
			&--mobile
				display none
				&.is-active
					display none
			&--desktop
				display block
				&__link
					margin-right 30px
					color VeryDarkBlue
					text-decoration none
					font-family FontFamilyHeadings
					font-weight FontWeightHeadingBold
					text-transform uppercase
					&:nth-last-child(1)
						margin-left 70px
						color DarkGrayishBlue

	.hamburger
		display none